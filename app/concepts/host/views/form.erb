<div class="header">
  <h3>Edit Host</h3>
  <%= link_to "Home", root_path %>
</div>

<%= simple_form_for model do |f| %>
  <%= f.input :name, placeholder: "name", label: false %>
  <%= f.input :sys_user, placeholder: "sys_user", label: false %>
  <%= f.input :address, placeholder: "address", label: false %>
  <%= f.input :source, placeholder: "source", label: false %>

  <%= f.association :key, collection: keys, placeholder: "key", label: false %>

  <%= f.button :submit, class: :expand %>
<% end %>

<div class="errors">
  <span>Errors: <%= model.errors.messages %></span>
</div>
