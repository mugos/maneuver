= simple_form_for [:app, :host, contract] do |f|
  = hidden_field_tag 'build[app][id]', contract.app.id
  = hidden_field_tag 'build[host][id]', contract.host.id

  .row
    %h2 Deploy
    = concept "build/cell/deploy", contract
  .row
    %h2 Tasks
    = concept "build/cell/task", contract

  .row
    = f.button :submit, class: :expand

  .errors
    %span
      Errors: #{model.errors.messages}
