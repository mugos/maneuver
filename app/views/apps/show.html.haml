.header
  %h1= @app.name
  = link_to "Edit", edit_app_path(@app)
  = link_to "Delete App", app_path(@app), method: :delete
  = link_to "Home", root_path

.row
  %h3 Hosts
  - @app.hosts.each do |host|
    %p= link_to host.name, app_host_builds_path(@app, host)

.row
  %h3 Ultimos Deploys
  %table
    %tr
      %th Commit/Version
      %th state
      %th Host
      %th Data
      %th Author
    %tr
      %td #000000
      %td PASSED
      %td Staging
      %td Hoje
      %td Gabriel
    %tr
      %td v.0.1.2
      %td PASSED
      %td Production
      %td Hoje
      %td Luiz
  = link_to "VER TODOS ->"

